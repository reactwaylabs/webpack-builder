{
    "name": "@reactway/image-loader",
    "version": "2.0.4",
    "description": "A plugin made for webpack to load images, optimize and resize.",
    "keywords": [
        "webpack",
        "webpack-builder",
        "reactway",
        "plugin",
        "images",
        "images-loader"
    ],
    "authors": [
        "Martynas Žilinskas <martynas@quatrodev.com> (https://github.com/MartynasZilinskas)",
        "Dovydas Navickas <dovydas@quatrodev.com> (https://github.com/DovydasNavickas)",
        "Eimantas Dumšė <eimantas@quatrodev.com> (https://github.com/EimantasDumse)"
    ],
    "repository": "github:reactway/webpack-builder",
    "bugs": "https://github.com/reactway/webpack-builder/issues",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc -p .",
        "watch": "tsc -p . -w",
        "pretest": "tsc -p . --noEmit && tslint -p .",
        "test": "jest"
    },
    "files": [
        "dist",
        "**/*.md"
    ],
    "dependencies": {
        "chalk": "^3.0.0",
        "debug": "^4.1.1",
        "fs-extra": "^8.1.0",
        "imagemin": "^7.0.1",
        "imagemin-gifsicle": "^6.0.1",
        "imagemin-mozjpeg": "^8.0.0",
        "imagemin-optipng": "^7.1.0",
        "imagemin-pngquant": "^8.0.0",
        "imagemin-svgo": "^7.0.0",
        "imagemin-webp": "^5.1.0",
        "loader-utils": "^1.2.3",
        "mime": "^2.4.4",
        "schema-utils": "^2.5.0",
        "sharp": "^0.30.5",
        "tslib": "^1.10.0",
        "upath": "^1.2.0"
    },
    "devDependencies": {
        "@types/debug": "^4.1.5",
        "@types/fs-extra": "^8.0.1",
        "@types/imagemin": "^7.0.0",
        "@types/imagemin-gifsicle": "^5.2.0",
        "@types/imagemin-optipng": "^5.2.0",
        "@types/imagemin-pngquant": "^7.0.0",
        "@types/imagemin-svgo": "^7.0.0",
        "@types/jest": "^24.0.23",
        "@types/json-schema": "^7.0.3",
        "@types/loader-utils": "^1.1.3",
        "@types/memory-fs": "^0.3.2",
        "@types/mime": "^2.0.1",
        "@types/node": "^12.12.12",
        "@types/sharp": "^0.23.0",
        "@types/webpack": "^4.41.0",
        "istanbul-azure-reporter": "^0.1.4",
        "jest": "^24.9.0",
        "jest-junit": "^9.0.0",
        "memory-fs": "^0.5.0",
        "simplr-tslint": "^1.0.0-alpha.14",
        "ts-jest": "^24.2.0",
        "tslint": "^5.20.1",
        "tslint-language-service": "^0.9.9",
        "typescript": "^3.7.2",
        "webpack": "^4.41.2"
    },
    "jest": {
        "verbose": true,
        "preset": "ts-jest",
        "testEnvironment": "node",
        "reporters": [
            "default",
            "jest-junit"
        ],
        "collectCoverage": true,
        "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx)$",
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/__tests__/*",
            "!src/index.ts",
            "!src/**/__tests__/compiler/compiler.ts"
        ],
        "coverageReporters": [
            "cobertura",
            "istanbul-azure-reporter"
        ]
    }
}
